<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffa7a7"

    tools:context="rbccps.kmc.ui.administration.CheckstatusActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView9"
        android:src="@drawable/oval"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageView10"
        android:src="@drawable/oval"
        android:layout_marginTop="41dp"
        android:layout_below="@+id/imageView9"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BACK"
        android:id="@+id/backButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/server"
        android:src="@drawable/servergrey"
        android:layout_alignBottom="@+id/imageView10"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="23dp" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/wearable"
        android:src="@drawable/wearable"
        android:layout_marginTop="33dp"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/server"
        android:layout_marginEnd="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wearable Sync Time"
        android:id="@+id/textView9"
        android:layout_below="@+id/imageView9"
        android:layout_alignStart="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server Sync Time"
        android:id="@+id/textView10"
        android:layout_below="@+id/imageView10"
        android:layout_alignEnd="@+id/server" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-6-13"
        android:id="@+id/wearableSyncDate"
        android:layout_marginStart="11dp"
        android:layout_above="@+id/wearableSyncTime"
        android:layout_toEndOf="@+id/backButton"
        android:layout_marginBottom="13dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2016-6-13"
        android:id="@+id/serverSyncDate"
        android:layout_alignTop="@+id/server"
        android:layout_alignStart="@+id/wearableSyncTime"
        android:layout_marginTop="32dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.20.30"
        android:id="@+id/wearableSyncTime"
        android:layout_alignBottom="@+id/wearable"
        android:layout_alignStart="@+id/wearableSyncDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10.20.30"
        android:id="@+id/serversyncTime"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/serverSyncDate"
        android:layout_alignStart="@+id/serverSyncDate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="KMC000"
        android:id="@+id/wearableID"
        android:layout_alignTop="@+id/wearable"
        android:layout_alignEnd="@+id/wearableSyncTime" />

</RelativeLayout>
