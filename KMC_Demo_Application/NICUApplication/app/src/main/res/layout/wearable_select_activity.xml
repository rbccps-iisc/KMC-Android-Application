<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
 >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/clock2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="100dp"
        android:id="@+id/imageView3"
        android:src="@drawable/babylogo"
        android:layout_above="@+id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Tag"
        android:id="@+id/selectedTag"
        android:layout_marginStart="28dp"
        android:layout_alignBottom="@+id/imageView2"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="6dp" />


    <Spinner
        android:id="@+id/static_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_alignParentStart="true" />


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@drawable/sensor"
        android:layout_marginBottom="71dp"
        android:layout_above="@+id/static_spinner"
        android:layout_toStartOf="@+id/selectedTag" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/confirmimageButton"
        android:src="@drawable/deselectbutton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CONFIRM"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/confirmimageButton"
        android:layout_alignStart="@+id/imageView3"
        android:layout_marginBottom="20dp" />


</RelativeLayout>
